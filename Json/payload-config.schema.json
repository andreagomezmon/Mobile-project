{
  "$id": "https://example.com/schemas/payload-config.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config Payload",
  "type": "object",
  "required": ["temp_min", "temp_max", "humidity_min", "humidity_max"],
  "additionalProperties": false,
  "properties": {
    "temp_min": {
      "type": "number",
      "minimum": -40,
      "maximum": 125
    },
    "temp_max": {
      "type": "number",
      "minimum": -40,
      "maximum": 125
    },
    "humidity_min": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    },
    "humidity_max": {
      "type": "number",
      "minimum": 0,
      "maximum": 100
    }
  }
}
